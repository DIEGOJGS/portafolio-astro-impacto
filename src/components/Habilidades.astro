---
import Container from './Container.astro';
// 1. Importamos nuestros datos de habilidades
import { skillsData } from '../data/skills.ts';

// 2. Función simple para poner la primera letra en mayúscula
function capitalize(str: string) {
  return str.charAt(0).toUpperCase() + str.slice(1);
}
---
<section id="habilidades" class="min-h-screen bg-neutral-100 text-neutral-900 py-20">

  <Container>
    <h2 class="text-4xl font-bold mb-12 text-center">Habilidades</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

      {Object.entries(skillsData).map(([category, skills]) => (
        <div class="bg-white rounded-lg p-6 shadow-sm">
          <h3 class="text-2xl font-bold mb-4">{capitalize(category)}</h3>

          <div class="flex flex-wrap gap-2">
            {skills.map(skill => (
              <span class="bg-neutral-200 text-neutral-800 text-sm font-medium px-3 py-1 rounded-full">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>