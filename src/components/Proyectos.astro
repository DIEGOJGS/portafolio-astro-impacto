---
import Container from './Container.astro';
// 1. ¡Importamos nuestra lista de proyectos!
import { projects } from '../data/projects.ts';

// 2. Filtramos la lista para separar Destacados de los demás
const featuredProjects = projects.filter(project => project.isFeatured);
const otherProjects = projects.filter(project => !project.isFeatured);
---
<section class="min-h-screen bg-white text-neutral-900 py-20">
  <Container>
    <h2 class="text-4xl font-bold mb-4">Proyectos Destacados</h2>
    <p class="text-lg text-neutral-600 mb-12">
      Estos son los proyectos más completos en los que he trabajado.
    </p>

    <div class="space-y-16">
      {featuredProjects.map(project => (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
          <div class="bg-neutral-200 h-64 rounded-lg">
            <p class="p-4">Placeholder para: {project.image}</p>
          </div>
          <div>
            <h3 class="text-2xl font-bold mb-2">{project.title}</h3>
            <p class="text-neutral-700 mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tech.map(tech => (
                <span class="bg-neutral-200 text-neutral-800 text-sm font-medium px-3 py-1 rounded-full">
                  {tech}
                </span>
              ))}
            </div>
            <a 
              href={project.githubUrl} 
              target="_blank" 
              class="text-neutral-900 font-bold hover:underline"
            >
              Ver en GitHub &rarr;
            </a>
          </div>
        </div>
      ))}
    </div>

    <h2 class="text-4xl font-bold mt-24 mb-12">Otros Proyectos</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {otherProjects.map(project => (
        <div class="bg-neutral-100 rounded-lg p-6">
          <h3 class="text-xl font-bold mb-2">{project.title}</h3>
          <p class="text-neutral-700 text-sm mb-4">{project.description.substring(0, 80)}...</p>
          <a 
            href={project.githubUrl} 
            target="_blank" 
            class="text-neutral-900 font-bold hover:underline text-sm"
          >
            Ver en GitHub &rarr;
          </a>
        </div>
      ))}
    </div>

  </Container>
</section>